---
import Layout from './Layout.astro';
import 'github-markdown-css/github-markdown-light.css';

export interface Props {
	frontmatter: {
		title?: string;
		date?: Date;
		[key: string]: any;
	};
}

const { frontmatter } = Astro.props;
const title = frontmatter.title || 'Copilot Workouts';
---

<Layout title={title}>
	<article class="max-w-none">
		<header class="mb-8 pb-6 border-b border-gray-200">
			{frontmatter.title && (
				<h1 class="text-4xl font-bold text-gray-900 mb-4">{frontmatter.title}</h1>
			)}
			{frontmatter.date && (
				<time class="text-gray-500 text-sm" datetime={frontmatter.date.toISOString()}>
					{frontmatter.date.toLocaleDateString('en-US', { 
						year: 'numeric', 
						month: 'long', 
						day: 'numeric' 
					})}
				</time>
			)}
		</header>
		
		<div class="markdown-body">
			<slot />
		</div>
	</article>
</Layout>

<style>
	/* Override some GitHub markdown styles for better integration */
	.markdown-body {
		box-sizing: border-box;
		min-width: 200px;
		max-width: none;
		margin: 0;
		padding: 0;
		background-color: transparent;
		font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Noto Sans", Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji";
		font-size: 16px;
		line-height: 1.5;
		word-wrap: break-word;
	}

	/* Ensure proper spacing for GitHub-style headings */
	.markdown-body h1 {
		font-size: 2em;
		font-weight: 600;
		padding-bottom: 0.3em;
		border-bottom: 1px solid #d1d5da;
		margin-top: 0;
		margin-bottom: 16px;
	}

	.markdown-body h2 {
		font-size: 1.5em;
		font-weight: 600;
		padding-bottom: 0.3em;
		border-bottom: 1px solid #d1d5da;
		margin-top: 24px;
		margin-bottom: 16px;
	}

	.markdown-body h3 {
		font-size: 1.25em;
		font-weight: 600;
		margin-top: 24px;
		margin-bottom: 16px;
	}

	/* GitHub-style tables */
	.markdown-body table {
		border-collapse: collapse;
		border-spacing: 0;
		width: 100%;
		overflow: auto;
		background-color: transparent;
		margin-top: 0;
		margin-bottom: 16px;
	}

	.markdown-body table th,
	.markdown-body table td {
		padding: 6px 13px;
		border: 1px solid #d1d5da;
	}

	.markdown-body table th {
		font-weight: 600;
		background-color: #f6f8fa;
	}

	.markdown-body table tr:nth-child(2n) {
		background-color: #f6f8fa;
	}

	/* GitHub-style blockquotes */
	.markdown-body blockquote {
		padding: 0 1em;
		color: #656d76;
		border-left: 0.25em solid #d1d5da;
		margin: 0 0 16px 0;
	}

	/* GitHub-style code blocks */
	.markdown-body pre {
		padding: 16px;
		overflow: auto;
		font-size: 85%;
		line-height: 1.45;
		background-color: #f6f8fa;
		border-radius: 6px;
		margin-bottom: 16px;
	}

	.markdown-body code {
		padding: 0.2em 0.4em;
		margin: 0;
		font-size: 85%;
		background-color: rgba(175, 184, 193, 0.2);
		border-radius: 6px;
	}

	.markdown-body pre code {
		background-color: transparent;
		border: 0;
		padding: 0;
		margin: 0;
		font-size: 100%;
	}

	/* GitHub-style lists */
	.markdown-body ul,
	.markdown-body ol {
		padding-left: 2em;
		margin-top: 0;
		margin-bottom: 16px;
	}

	.markdown-body li {
		margin-top: 0.25em;
	}

	/* GitHub-style checkboxes */
	.markdown-body input[type="checkbox"] {
		margin: 0 0.2em 0.25em -1.4em;
		vertical-align: middle;
	}

	/* Horizontal rules */
	.markdown-body hr {
		height: 0.25em;
		padding: 0;
		margin: 24px 0;
		background-color: #d1d5da;
		border: 0;
	}
</style>